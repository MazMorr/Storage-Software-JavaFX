<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="AlmacenSoftwarePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.marcosoft.almacenfx.Logic.Billetera</class>
        <class>com.marcosoft.almacenfx.Logic.Categoria</class>
        <class>com.marcosoft.almacenfx.Logic.Cuenta</class>
        <class>com.marcosoft.almacenfx.Logic.Moneda</class>
        <class>com.marcosoft.almacenfx.Logic.Producto</class>
        <class>com.marcosoft.almacenfx.Logic.TipoTransaccion</class>
        <class>com.marcosoft.almacenfx.Logic.Transaccion</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:src/main/resources/com/marcosoft/almacenfx/AlmacenMipyme DB.db"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>